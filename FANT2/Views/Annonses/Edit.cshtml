@model FANT2.Models.Annonse

@{
    ViewData["Title"] = "Edit";
}
<br />
<br />

<div id="fb-root"></div>
<a style="color: black; float: left" asp-action="Index"><i class="fa fa-arrow-left" style="color: black; font-size: large; margin-top: 20px; margin-left: 20px;"></i><br /> </a>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/nb_NO/sdk.js#xfbml=1&version=v8.0&appId=233524327907536&autoLogAppEvents=1" nonce="IwBrLqt5"></script>
<div class="text-center">
    <h1>Endre annonse</h1>


    <hr />
    <div class="row" >
        <div class="col-md-4">
            <br/>
            
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <label asp-for="Title" class="control-label" style="float: left; font-weight: bold">Tittel</label>
                    <input asp-for="Title" class="form-control"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label" style="float: left; font-weight: bold"> Beskrivelse</label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label" style="float: left; font-weight: bold"> Dato</label>
                    <input asp-for="Date" class="form-control"/>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group" style="float: left">
                    <input type="submit" value="Lagre endringer" class="btn btn-info"/>
                </div>
            </form>
        </div>
    </div>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
