        <tr>
            <td>
                @if (item.TypeAnnonse==true)
                {
                    colors = "#ff6666";
                    type = "Mistet";
                }   
                else
                {
                    colors = "#66cccc";
                    type = "Funnet";
                }
            
                <div class="card" style="width: 18rem; background-color: @colors">

                    @if(item.Image != null)
                    {
                        <img class="card-img-top" alt="..." src=@Html.DisplayFor(modelItem => item.Image) />
                    }

                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>

                        <h6 class="card-subtitle mb-2 text-muted">@type</h6>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Se mer</a>
                    </div>
                </div>
            </td>
